{
    "name": "Web4All",
    "version": "0.0.1",
    "manifest_version": 3,
    "description": "Une extension axée sur l'accessibilité",
    "icons": {
        "16": "icons/16x16.png",
        "32": "icons/32x32.png",
        "48": "icons/48x48.png",
        "128": "icons/128x128.png"
    },

    "action": {
        "default_popup": "popup.html"
    },
    
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions" :[
        "<all_urls>"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}